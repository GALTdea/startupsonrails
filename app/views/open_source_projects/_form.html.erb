<%= form_with(model: open_source_project, local: true) do |f| %>
  <% if open_source_project.errors.any? %>
    <div class="alert alert-danger">
      <% if open_source_project.errors[:url].include?('has already been taken') %>
        <p>
          <i class="fas fa-exclamation-circle"></i>
          This project URL has already been registered in the system.
        </p>
      <% else %>
        <h4><%= pluralize(open_source_project.errors.count, "error") %> prohibited this project from being saved:</h4>
        <ul>
          <% open_source_project.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :url, class: "form-label" %>
    <%= f.url_field :url, class: "form-control", required: true %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit "Add Project", class: "btn btn-primary" %>
    <%= link_to "Back", :back, class: "btn btn-secondary mt-2" %>
  </div>
<% end %>
