  <div class="card article-card h-100 shadow-sm m-2">
    <div class="inner-card">
      <% if blog.image.attached? %>
        <%= image_tag(blog.image, class: "card-img-top rounded", size: "350x150") %>
      <% else %>
        <%= image_tag("sample_image.jpeg", class: "card-img-top rounded-top", alt: "Placeholder Image" , size: "350x150" ) %>
      <% end %>
      <div class="card-body d-flex flex-column">
        <div class="mb-2"><%= link_to blog.title, blog, class:"custum-link fw-medium fs-5" %></div>
        <small class="card-font">
          <ul class="nav">
            <li class="nav-item">
              <i class="bi bi-calendar3"> <%= blog.created_at.strftime("%B %d, %Y") %></i>
            </li>
          </ul>
        </small>
        <p class="card-text mb-4 fs-014 card-font mt-2"><%= truncate(blog.content.to_plain_text, length: 100) %></p>
      </div>
    </div>
    <div class="card-footer bg-white border-top-0">
        <small class="text-muted sticky-bottom"> <%#= time_ago_in_words(blog.created_at) %> </small>
    </div>
  </div>
