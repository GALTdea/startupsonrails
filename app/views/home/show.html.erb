<main class="my-3 p-3">
  <section class="mb-5 container-fluid">
    <div class="row py-lg-5 header-section-content">
      <h1 class="display-2 mb-4">StartupsOnRails</h1>
      <h4 class=" mb-4">Find out which companies are built on Ruby on Rails and support its thriving community.</h4>
    </div>
  </section>

  <!--Listing section -->
  <div class="">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:max-w-none">
        <div class="text-center">
          <h2 class="text-3xl text-gray-900 sm:text-4xl">Top Listings</h2>
          <%# <h3 class="mt-4 font-normal text-lg leading-8 text-gray-600">subheader if needed</h3> %>
      </div>
      <% @companies_by_category.each_slice(4).with_index do |category_slice, index| %>
        <div class="row mt-5"> <!-- mt-4 gives margin-top for spacing between rows -->
          <% category_slice.each do |category_name, companies| %>
            <div class="col-md-3"> <!-- col-md-3 ensures 4 categories per row -->
              <ul class="list-group">
                <li class="list-group-item border border-bottom-0 fw-medium fs-5 text"><%= category_name.titleize %></li>
                <% companies.take(5).each do |comp| %>
                  <li class="list-group-item company-logo-container">
                    <%= raw generate_svg_with_initials(comp.name, classes="", height='24', width='24') %>
                    <%= link_to comp.name, company_path(comp), class:"ms-2" %>
                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512" class="icon-right">
                      <!-- Circle Surrounding the Plus -->
                      <circle cx="256" cy="256" r="240" stroke="black" fill="none" stroke-width="32"/>
                      <!-- Inner Plus in Black -->
                      <path d="M232 344V280H168c-13.3 0-24-10.7-24-24s10.7-24 24-24h64V168c0-13.3 10.7-24 24-24s24 10.7 24 24v64h64c13.3 0 24 10.7 24 24s-10.7 24-24 24H280v64c0 13.3-10.7 24-24 24s-24-10.7-24-24z" fill="black"/>
                    </svg>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <!-- End of listing section -->
</main> 

