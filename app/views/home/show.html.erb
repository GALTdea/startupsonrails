          <% end %>
        </ul>
        </ul>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-md-6">
        <h2>Open Source</h2>
        <ul class="list-group">
          <% @test_list.each do |comp|  %>
            <li class="list-group-item"><%= link_to comp.name, company_path(comp) %> </li>
          <% end %>
        </ul>
      </div>
      <div class="col-md-6">
        <h2>Hiring Now</h2>
        <ul class="list-group">
          <% @cool_cats.each do |comp| %>
            <li class="list-group-item"> <%= link_to comp.name, company_path(comp) %></li>
            
          <% end %>
            
