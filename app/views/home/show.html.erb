<!-- Featured Articles -->
<div class="container">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-12">
            <div class="my-5">
                <h2>Related Post</h2>
            </div>
        </div>
        <% @featured_blogs.each do |blog| %>
            <div class="col-xl-4 col-lg-4 col-md-6 col-12 mb-4">
                <!-- Card -->
                <div class="card shadow-lg h-100 d-flex flex-column">
                    <div class="article-card p-3 m-1 gradient-bg-1">
                        <h3 class="card-title mb-3" style="height: 3.6em; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                            <%= link_to blog.title, blog_path(blog), class: "text-reset" %>
                        </h3>
                        <p class="text-muted mb-0">Published: <%= blog.created_at.strftime("%b %d") %></p>
                    </div>
                    <!-- Card body -->
                    <div class="card-body d-flex flex-column">
                        <p class="flex-grow-1"><%= truncate(strip_tags(blog.content.to_s), length: 100, escape: false) %></p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

<!-- Categories Section -->
<section class="mt-6">
    <div class="container mb-lg-8">
        <div class="row">
            <div class="col-12">
                <div class="mb-4">
                    <h2 class="mb-1 h3 fw-normal">Popular Companies</h2>
                    <%# <p>These are the most popular courses among Geeks Courses learners worldwide in year 2022</p> %>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <!-- Nav tab -->
                <ul class="nav nav-lb-tab mb-6 bg-gray-200 px-5 rounded-3" id="pills-tab" role="tablist">
                    <% @featured_categories.each_with_index do |(category, _), index| %>
                        <li class="nav-item <%= 'ms-0' if index.zero? %>" role="presentation">
                        <a class="nav-link <%= 'active' if index.zero? %>"
                            id="pills-<%= category.name.parameterize %>-tab"
                            data-bs-toggle="pill"
                            href="#pills-<%= category.name.parameterize %>"
                            role="tab"
                            aria-controls="pills-<%= category.name.parameterize %>"
                            aria-selected="<%= index.zero? %>">
                            <%= category.name.titleize %>
                        </a>
                        </li>
                    <% end %>
                </ul>
                
                <!-- Tab content -->
                <div class="tab-content" id="pills-tabContent">
                    <% @featured_categories.each_with_index do |(category, companies), index| %>
                        <div class="tab-pane fade <%= 'show active' if index.zero? %>"
                            id="pills-<%= category.name.parameterize %>"
                            role="tabpanel"
                            aria-labelledby="pills-<%= category.name.parameterize %>-tab">
                            <!-- row -->
                            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                                <% companies.each do |company| %>
                                <div class="col-xl-2 col-md-4 col-6 mb-3 mb-xl-0">
                                    <!-- card card-borderd  -->
                                    <%= link_to company_path(company), class: "card h-100" do %>
                                    <!-- card body  -->
                                    <div class="card-body">
                                        <% if company.logo.present? %>
                                        <%= image_tag company.logo, alt: company.name, class: "icon-lg mb-3" %>
                                        <% end %>
                                        <h3><%= company.name %></h3>
                                        <p class="mb-0">Full platform of marketing, sales, other service.</p>
                                    </div>
                                    <% end %>
                                </div>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Trending Open Source Projects Section -->
<section class="mt-6">
    <div class="container mb-lg-8">
        <div class="row">
            <div class="col-12">
                <div class="mb-4">
                    <h2 class="mb-1 h3 fw-normal">Trending Open Source Projects</h2>
                    <p>Popular Ruby and Rails projects with strong community support</p>
                </div>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% [
                { name: 'rails/rails', description: 'Ruby on Rails', stars: 52000, forks: 20500 },
                { name: 'jekyll/jekyll', description: 'Jekyll is a blog-aware static site generator in Ruby', stars: 45000, forks: 9800 },
                { name: 'discourse/discourse', description: 'A platform for community discussion', stars: 36000, forks: 7500 }
            ].each do |project| %>
                <div class="col">
                    <div class="card shadow-lg h-100">
                        <div class="card-body">
                            <h3 class="card-title">
                                <a href="https://github.com/<%= project[:name] %>" class="text-reset" target="_blank" rel="noopener noreferrer">
                                    <%= project[:name] %>
                                </a>
                            </h3>
                            <p class="card-text"><%= project[:description] %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-star-fill"></i> <%= number_with_delimiter(project[:stars]) %>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-diagram-2"></i> <%= number_with_delimiter(project[:forks]) %>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <p class="mb-1 text-muted">Supported by:</p>
                            <div class="d-flex justify-content-start align-items-center">
                                <% 4.times do |i| %>
                                    <img src="https://via.placeholder.com/30" alt="Supporter <%= i + 1 %>" class="rounded-circle me-2" width="30" height="30">
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>