<!-- Featured Articles -->
<section class="py-5">
  <div class="container">
    <div class="row mb-4">
      <div class="col-12">
        <h2 class="h3 fw-normal">Related Posts</h2>
      </div>
    </div>
    <div class="row">
      <% @featured_blogs.each do |blog| %>
        <div class="col-lg-4 col-md-6 mb-4">
          <!-- Card -->
          <div class="card shadow h-100">
            <div class="article-card p-3 gradient-bg-1">
              <h3 class="card-title h5" style="height: 3em; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                <%= link_to blog.title, blog_path(blog), class: "text-reset" %>
              </h3>
            </div>
            <!-- Card body -->
            <div class="card-body d-flex flex-column">
              <p class="flex-grow-1"><%= truncate(strip_tags(blog.content.to_s), length: 100, escape: false) %></p>
              <p class="text-muted mb-0 text-end">Published: <%= blog.created_at.strftime("%b %d") %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Categories Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row mb-4">
      <div class="col-12">
        <h2 class="h3 fw-normal">Popular Companies</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <!-- Nav tab -->
        <ul class="nav nav-pills mb-4 bg-white p-2 rounded-3" id="pills-tab" role="tablist">
          <% @featured_categories.each_with_index do |(category, _), index| %>
            <li class="nav-item" role="presentation">
              <a class="nav-link <%= 'active' if index.zero? %>"
                 id="pills-<%= category.name.parameterize %>-tab"
                 data-bs-toggle="pill"
                 href="#pills-<%= category.name.parameterize %>"
                 role="tab"
                 aria-controls="pills-<%= category.name.parameterize %>"
                 aria-selected="<%= index.zero? %>">
                <%= category.name.titleize %>
              </a>
            </li>
          <% end %>
        </ul>
        
        <!-- Tab content -->
        <div class="tab-content" id="pills-tabContent">
          <% @featured_categories.each_with_index do |(category, companies), index| %>
            <div class="tab-pane fade <%= 'show active' if index.zero? %>"
                 id="pills-<%= category.name.parameterize %>"
                 role="tabpanel"
                 aria-labelledby="pills-<%= category.name.parameterize %>-tab">
              <div class="row row-cols-2 row-cols-md-3 row-cols-lg-6 g-3">
                <% companies.each do |company| %>
                  <div class="col">
                    <%= link_to company_path(company), class: "card h-100 text-decoration-none" do %>
                      <div class="card-body text-center">
                        <% if company.logo.present? %>
                          <%= image_tag company.logo, alt: company.name, class: "img-fluid mb-3", style: "max-height: 50px;" %>
                        <% end %>
                        <h3 class="h6 mb-2"><%= company.name %></h3>
                        <p class="small text-muted mb-0">Full platform of marketing, sales, other service.</p>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Trending Open Source Projects Section -->
<section class="py-5">
  <div class="container">
    <div class="row mb-4">
      <div class="col-12">
        <h2 class="h3 fw-normal">Trending Open Source Projects</h2>
        <p class="text-muted">Popular Ruby and Rails projects with strong community support</p>
      </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% [
        { name: 'rails/rails', description: 'Ruby on Rails', stars: 52000, forks: 20500 },
        { name: 'jekyll/jekyll', description: 'Jekyll is a blog-aware static site generator in Ruby', stars: 45000, forks: 9800 },
        { name: 'discourse/discourse', description: 'A platform for community discussion', stars: 36000, forks: 7500 }
      ].each do |project| %>
        <div class="col">
          <div class="card shadow h-100">
            <div class="card-body">
              <h3 class="h5 card-title">
                <a href="https://github.com/<%= project[:name] %>" class="text-reset" target="_blank" rel="noopener noreferrer">
                  <%= project[:name] %>
                </a>
              </h3>
              <p class="card-text mb-3"><%= project[:description] %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-star-fill"></i> <%= number_with_delimiter(project[:stars]) %>
                  </button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-diagram-2"></i> <%= number_with_delimiter(project[:forks]) %>
                  </button>
                </div>
              </div>
            </div>
            <div class="card-footer bg-transparent">
              <p class="small text-muted mb-2">Top supporters:</p>
              <div class="d-flex">
                <% 4.times do |i| %>
                  <img src="https://via.placeholder.com/30" alt="Supporter <%= i + 1 %>" class="rounded-circle me-2" width="30" height="30">
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>