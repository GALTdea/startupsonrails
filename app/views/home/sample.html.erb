<section class="py-5">

  <div class="container">
    <h2 class="mb-4 fs-2 fw-bold text-center">Recent Articles</h2>


    <div class="row g-4">

      <% @featured_blogs.each do |blog| %>

        <div class="col-lg-4 col-md-6">
          <div class="card shadow border-0 h-100">
            <% if blog.image.attached? %>
              <%= image_tag(blog.image, class: "card-img-top img-fluid rounded", alt: "Featured image for #{blog.title}") %>
            <% else %>
              <%= image_tag("placeholder.jpg", class: "card-img-top img-fluid rounded", alt: "Default placeholder image") %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title mb-3"><%= link_to blog.title, blog, class: "stretched-link text-decoration-none" %></h5>
              <p class="card-text"><%= truncate(blog.content.to_plain_text, length: 100, separator: ' ') %></p>
            </div>
            <div class="card-footer bg-transparent border-top-0">
              <small class="text-muted">Published <%= time_ago_in_words(blog.created_at) %> ago</small>
            </div>
          </div>
        </div>

      <% end %>

    </div>


    <%= link_to "View All Articles", blogs_path, class: "btn btn-primary mt-4 d-block mx-auto" %>

</section>




 
