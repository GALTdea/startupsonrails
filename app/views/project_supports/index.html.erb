<div class="container mt-4">
  <div class="row">
    <!-- Project Supports List -->
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0"><%= @company.name %>'s Open Source Projects</h2>
        </div>
        <div class="card-body">
          <!-- Sponsorships Section -->
          <div class="mb-4">
            <h4>Sponsorships</h4>
            <div id="sponsorship_supports">
              <% if @project_supports.sponsorship.any? %>
                <div class="list-group mb-3">
                  <% @project_supports.sponsorship.each do |support| %>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                      <div>
                        <%= link_to support.open_source_project.url, 
                            support.open_source_project.url, 
                            target: "_blank", 
                            class: "text-decoration-none" %>
                        <small class="text-muted d-block">
                          Added <%= time_ago_in_words(support.created_at) %> ago
                        </small>
                      </div>
                      <div class="d-flex align-items-center">
                        <span class="badge bg-primary me-2">Sponsor</span>
                        <%= button_to project_support_path(support), 
                            method: :delete,
                            class: "btn btn-link text-danger p-0",
                            form: { data: { turbo_confirm: "Are you sure?" } } do %>
                          <i class="fas fa-trash"></i>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <p class="text-muted">No sponsored projects yet.</p>
              <% end %>
            </div>
          </div>

          <!-- Contributions Section -->
          <div class="mb-4">
            <h4>Contributions</h4>
            <div id="contribution_supports">
              <% if @project_supports.contribution.any? %>
                <div class="list-group mb-3">
                  <% @project_supports.contribution.each do |support| %>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                      <div>
                        <%= link_to support.open_source_project.url, 
                            support.open_source_project.url, 
                            target: "_blank", 
                            class: "text-decoration-none" %>
                        <small class="text-muted d-block">
                          Added <%= time_ago_in_words(support.created_at) %> ago
                        </small>
                      </div>
                      <div class="d-flex align-items-center">
                        <span class="badge bg-success me-2">Contributor</span>
                        <%= button_to project_support_path(support), 
                            method: :delete,
                            class: "btn btn-link text-danger p-0",
                            form: { data: { turbo_confirm: "Are you sure?" } } do %>
                          <i class="fas fa-trash"></i>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <p class="text-muted">No contributed projects yet.</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Add Project Support Form -->
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Add New Project Support</h4>
        </div>
        <div class="card-body">
          <%= form_with(model: [@company, ProjectSupport.new], 
                        local: true, 
                        data: { controller: "project-support" }) do |f| %>
            
            <%= fields_for :open_source_project, OpenSourceProject.new do |op| %>
              <div class="mb-3">
                <%= op.label :url, "GitHub URL", class: "form-label" %>
                <%= op.url_field :url, 
                    class: "form-control", 
                    required: true,
                    placeholder: "https://github.com/org/project",
                    data: { 
                      project_support_target: "url",
                      action: "input->project-support#validateUrl"
                    } %>
                <div class="form-text">Enter the GitHub repository URL</div>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :support_type, "Type of Support", class: "form-label" %>
              <%= f.select :support_type,
                          options_for_select([
                            ['Sponsorship', 'sponsorship'],
                            ['Contribution', 'contribution']
                          ]),
                          { prompt: "Select type of support" },
                          { class: "form-select", 
                            required: true,
                            data: { project_support_target: "type" } } %>
            </div>

            <div class="d-grid">
              <%= f.submit "Add Support", 
                  class: "btn btn-primary",
                  data: { 
                    project_support_target: "submit",
                    action: "click->project-support#validateForm"
                  } %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="card mt-3">
        <div class="card-body">
          <%= link_to "Back to Company", 
              company_path(@company), 
              class: "btn btn-secondary w-100" %>
        </div>
      </div>
    </div>
  </div>
</div>
