<div class="card card-bordered mb-4 card-hover cursor-pointer">
  <div class="card-body">
    <div class="d-lg-flex">
      <div class="mb-3 mb-lg-0">
        <% if company.logo.attached? %>
          <%= image_tag company.logo, alt: company.name, class: "icon-shape border rounded-3 icon-xxl" %>
        <% else %>
          <img src="https://via.placeholder.com/150" alt="Image placeholder" class="icon-shape border rounded-3 icon-xxl">
        <% end %>
      </div>
      <!-- text -->
      <div class="w-100 ms-lg-4">
        <div class="d-flex justify-content-between mt-1">
          <div>
            <!-- heading -->
            <h3 class="mb-1">
              <%= link_to company.name, company_path(company), class: 'text-inherit', data: { turbo_frame: "_top" } %>
            </h3>
          </div>
          <div>
            <!-- button -->
            <a href="#" class="btn btn-outline-primary btn-sm">Follow</a>
          </div>
        </div>

        <div class="mt-4">
          <div class="row g-2">
            <% if company.location.present? %>
              <div class="col-12 col-md-6">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-geo-alt-fill align-text-bottom" viewBox="0 0 16 16">
                  <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" />
                </svg>
                <span class="ms-1"><%= company.location %></span>
              </div>
            <% end %>

            <%# <div class="col-12 col-md-6">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-building align-text-bottom" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M14.763.075A.5.5 0 0 1 15 .5v15a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5V14h-1v1.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V10a.5.5 0 0 1 .342-.474L6 7.64V4.5a.5.5 0 0 1 .276-.447l8-4a.5.5 0 0 1 .487.022zM6 8.694 1 10.36V15h5V8.694zM7 15h2v-1.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 .5.5V15h2V1.309l-7 3.5V15z" />
                <path d="M2 11h1v1H2v-1zm2 0h1v1H4v-1zm-2 2h1v1H2v-1zm2 0h1v1H4v-1zm4-4h1v1H8V9zm2 0h1v1h-1V9zm-2 2h1v1H8v-1zm2 0h1v1h-1v-1zm2-2h1v1h-1V9zm0 2h1v1h-1v-1zM8 7h1v1H8V7zm2 0h1v1h-1V7zm2 0h1v1h-1V7zM8 5h1v1H8V5zm2 0h1v1h-1V5zm2 0h1v1h-1V5zm0-2h1v1h-1V3z" />
              </svg>
              <span class="ms-1"></span>
            </div> %>
          </div>

          <div class="mt-3">
            <p class="mb-0"><%= truncate(company.about, length: 150, separator: ' ', omission: '...') %></p>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</div>