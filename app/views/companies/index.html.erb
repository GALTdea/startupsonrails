<div class="container mt-4">
  <!-- Search and Filters -->
  <div class="row">
    <!-- Filters Section -->
    <div class="col-md-3">
      <h5>Filters</h5>
      <hr>
      <!-- Category Filter -->
      <div class="mb-3">
        <%= form_with url: companies_path, method: :get, local: true do |f|  %>
          <%= f.label :category_id, "Category" %>
          <%= f.collection_select :category_id, Category.showcased, :id, :name, {prompt: "Select a category"}, {class: "form-control"} %>
          <%= f.submit "Filter", class: "btn btn-primary mt-2" %>
        <% end %>
      </div>
      <!-- Other filters can be added similarly -->
    </div>

    <!-- Search and Companies List -->
    <div class="col-md-9">
      <!-- Search Bar -->
      <div data-controller="autocomplete">
        <div class="input-group mb-3">
          <input data-autocomplete-target="input" data-action="keyup->autocomplete#search" type="text" placeholder="Search companies..." class="form-control">
          <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Search</button>
          </div>
        </div>
        <ul data-autocomplete-target="results"></ul>
      </div>

      <!-- Companies List -->
      <div class="bg-body rounded">
        <% @companies.each do |company| %>
          <%= render partial: 'company', locals: { company: company } %>
        <% end %>

        <div class="d-flex justify-content-center mt-4">
          <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1%>
        </div>
      </div>
    </div>
  </div>
</div>
