<section style="">
  <div class="container py-5">
    <div class="row">
       <!--  first col image, social links -->
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <% if @company.logo.attached? %>
              <%= image_tag @company.logo, class: "img-fluid rounded" %>
            <% else %>
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                class="rounded-circle img-fluid" style="width: 150px;">
            <% end %>
            <h5 class="my-3"><%= @company.name %></h5>
            <p class="text-muted mb-1">Full Stack Developer</p>
            <p class="text-muted mb-4">Bay Area, San Francisco, CA</p>
            <div class="d-flex justify-content-center mb-2">
              <button type="button" class="btn btn-primary">Follow</button>
              <button type="button" class="btn btn-outline-primary ms-1">Message</button>
            </div>
          </div>
        </div>
        
        <div class="card mb-4 mb-lg-0">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fas fa-globe fa-lg text-warning"></i>
                <p class="mb-0">https://mdbootstrap.com</p>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fab fa-github fa-lg" style="color: #333333;"></i>
                <p class="mb-0">mdbootstrap</p>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fab fa-twitter fa-lg" style="color: #55acee;"></i>
                <p class="mb-0">@mdbootstrap</p>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fab fa-instagram fa-lg" style="color: #ac2bac;"></i>
                <p class="mb-0">mdbootstrap</p>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                <p class="mb-0">mdbootstrap</p>
              </li>
            </ul>
          </div>
        </div>
      </div>
       <!-- second col, company info -->
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Company Snapshot</h5>
            <p class="text-muted mb-3"><%= @company.about %></p>

            <ul class="list-unstyled">
              <li class="d-flex align-items-center">
                <div class="me-3"> <i class="fas fa-map-marker-alt  text-dark-emphasis"></i> </div>
                <div>
                  <%= @company.location if @company.location %>
                </div>
              </li>

              <li class="mt-2 d-flex align-items-center">
                <div class="me-3"><i class="fas fa-users text-dark-emphasis"></i> </div>
                <div>
                  <%#= @company.size %>
                </div>
              </li>

              <li class="mt-2 d-flex align-items-center">
                <div class="me-3"><i class="fas fa-industry text-dark-emphasis"></i> </div>
                <div>
                  <%#= @company.industry %>
                </div>
              </li>

              <li class="mt-2 d-flex align-items-center">
                <div class="me-3"><i class="fas fa-sitemap text-dark-emphasis"></i> </div>
                <div>
                  <%#= @company.company_type %>
                </div>
              </li>

              <li class="mt-2 d-flex align-items-center">
                <div class="me-3"><i class="fas fa-calendar-alt text-dark-emphasis"></i> </div>
                <div>
                  <%#= @company.founded %>
                </div>
              </li>
            </ul>
          </div>
        </div>
        <!-- New section for showcasing the tech stack -->
        <div class="card mt-4">
          <div class="card-body">
            <h5 class="mb-4">Tech Stack</h5>
            <div class="row">
              <!-- Dummy example for Ruby on Rails -->
              <div class="col-md-3 mb-4">
                <div class="card text-center">
                  <div class="card-body">
                    <%= image_tag '/assets/rubyonrails_icon.png', alt: 'Ruby on Rails Icon', class: 'img-fluid mb-3 round', style: 'width: 45px;' %>
                    <h6 class="card-title">Ruby on Rails</h6>
                    <%# <p class="card-text">Our primary framework for building scalable web applications.</p> %>
                  </div>
                </div>
              </div>
              <!-- Dummy example for JavaScript -->
              <div class="col-md-3 mb-4">
                <div class="card text-center">
                  <div class="card-body">
                    <i class="fab fa-js-square fa-3x text-warning mb-3"></i>
                    <h6 class="card-title">JavaScript</h6>
                    <%# <p class="card-text">Used for dynamic and interactive user interfaces.</p> %>
                  </div>
                </div>
              </div>
              <!-- Dummy example for PostgreSQL -->
              <div class="col-md-3 mb-4">
                <div class="card text-center">
                  <div class="card-body">
                    <i class="fas fa-database fa-3x text-info mb-3"></i>
                    <h6 class="card-title">PostgreSQL</h6>
                    <%# <p class="card-text">Our choice for robust and scalable database management.</p> %>
                  </div>
                </div>
              </div>
              <!-- Dummy example for Redis -->
              <div class="col-md-3 mb-4">
                <div class="card text-center">
                  <div class="card-body">
                    <i class="fas fa-memory fa-3x text-success mb-3"></i>
                    <h6 class="card-title">Redis</h6>
                    <%# <p class="card-text">Used for caching and real-time data processing.</p> %>
                  </div>
                </div>
              </div>
              <!-- Dummy example for Bootstrap -->
              <div class="col-md-3 mb-4">
                <div class="card text-center">
                  <div class="card-body">
                    <i class="fab fa-bootstrap fa-3x text-primary mb-3"></i>
                    <h6 class="card-title">Bootstrap</h6>
                    <%# <p class="card-text">For creating responsive and mobile-first web pages.</p> %>
                  </div>
                </div>
              </div>
              <!-- Dummy example for Heroku -->
              <div class="col-md-3 mb-4">
                <div class="card text-center">
                  <div class="card-body">
                    <i class="fas fa-cloud fa-3x text-purple mb-3"></i>
                    <h6 class="card-title">Heroku</h6>
                    <%# <p class="card-text">Platform for deploying, managing, and scaling applications.</p> %>
                  </div>
                </div>
              </div>
              <!-- Dummy example for GitHub -->
              <div class="col-md-3 mb-4">
                <div class="card text-center">
                  <div class="card-body">
                    <i class="fab fa-github fa-3x text-dark mb-3"></i>
                    <h6 class="card-title">GitHub</h6>
                    <%# <p class="card-text">For version control and collaborative development.</p> %>
                  </div>
                </div>
              </div>
              <!-- Dummy example for Docker -->
              <div class="col-md-3 mb-4">
                <div class="card text-center">
                  <div class="card-body">
                    <i class="fab fa-docker fa-3x text-blue mb-3"></i>
                    <h6 class="card-title">Docker</h6>
                    <%# <p class="card-text">Used for containerizing applications to ensure consistency across environments.</p> %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- New section for showcasing open-source software -->
        <div class=" mt-4">

          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title">Open Source We Sponsor</h5>
              <p class="text-muted mb-4">We believe in giving back to the open source community. These are some of the projects we proudly support and use:</p>

              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="bordered-card h-100"> <%= link_to "https://github.com/ruby/ruby", target: "_blank", class: "card-link" do %>
                      <div class="card-body d-flex flex-column align-items-start">
                        <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/f/f1/Ruby_logo.png", alt: "Ruby Logo", class: "img-fluid mb-3 rounded", style: "width: 50px;" %>
                        <h6 class="card-title">Ruby</h6>
                        <p class="card-text text-muted">A dynamic, open source programming language with a focus on simplicity and productivity.</p>
                        <div class="mt-auto">
                          <span class="badge bg-light text-dark me-2">
                            <i class="fab fa-github"></i> <%= number_with_delimiter(18900) %> Stars 
                          </span>
                          <span class="badge bg-light text-dark">
                            <i class="fas fa-code-branch"></i> <%= number_with_delimiter(2600) %> Forks
                          </span>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>

                <div class="col-md-6 mb-4">
                  <div class="bordered-card h-100"> <%= link_to "https://github.com/rails/rails", target: "_blank", class: "card-link" do %>
                      <div class="card-body d-flex flex-column align-items-start">
                        <%= image_tag "https://avatars.githubusercontent.com/u/4223?s=280&v=4", alt: "Ruby on Rails Logo", class: "img-fluid mb-3 rounded", style: "width: 50px;" %>
                        <h6 class="card-title">Ruby on Rails</h6>
                        <p class="card-text text-muted">A web-application framework that includes everything needed to create database-backed web applications according to the Model-View-Controller (MVC) pattern.</p>
                        <div class="mt-auto">
                          <span class="badge bg-light text-dark me-2">
                            <i class="fab fa-github"></i> <%= number_with_delimiter(52700) %> Stars 
                          </span>
                          <span class="badge bg-light text-dark">
                            <i class="fas fa-code-branch"></i> <%= number_with_delimiter(20900) %> Forks
                          </span>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>



          
        </div>
      </div>
    </div>


    <div class="adimin_links">
      <% if user_signed_in? && current_user.admin? %>
        <div class="admin_links">
          <%= link_to 'Edit', edit_company_path(@company), class: 'btn btn-link' %>
          <%= link_to 'Delete', @company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link' %>
          <% Company.statuses.keys.each do |status| %>
            <% unless @company.status == status %>
              <%= form_with url: update_status_company_path(@company, status: status), method: :patch, local: true do |form| %>
                <%= form.submit "Set as #{status.titleize}", data: { confirm: "Are you sure you want to change the status to #{status.titleize}?" }, class:"btn btn-link" %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% end  %>
    </div>
  </div>
</section>