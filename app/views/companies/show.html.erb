<% content_for :twitter_card_meta do %>
  <%= render 'shared/twitter_card_meta', 
             title: @company.name,
             description: @company.about,
             image_url: @page_image_url %>
<% end %>

<section style="">
  <div class="container py-5">
    <div class="row">
       <!--  first col image, social links -->
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <% if @company.logo.attached? %>
              <%= image_tag @company.logo, class: "img-fluid rounded-circle", style: "width: 150px; height: 150px; object-fit: cover;" %>
            <% else %>
              <div class="rounded-circle overflow-hidden" style="width: 150px; height: 150px; margin: 0 auto;">
                <%= company_logo_placeholder(@company, size: 150) %>
              </div>
            <% end %>
            <h5 class="my-3 h2"><%= @company.name %></h5>
          </div>
        </div>
      </div>
      
       <!-- second col, company info -->
      <div class="col-lg-8">
        
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title h2">Company Snapshot</h5>
            <p class="text-muted mb-3"><%= @company.about %></p>
            <div class="row">
              <div class="col-md-6">
                <ul class="list-unstyled">
                  <% if @company.location.present? %>
                    <li class="d-flex align-items-center">
                      <div class="me-3"> <i class="fas fa-map-marker-alt  text-dark-emphasis"></i> </div>
                      <div>
                        <%= @company.location %>
                      </div>
                    </li>
                  <% end %>
                  <% if @company.employee_count.present? %>
                    <li class="mt-2 d-flex align-items-center">
                      <div class="me-3"><i class="fas fa-users text-dark-emphasis"></i> </div>
                      <div>
                        <%= @company.employee_count %>
                      </div>
                    </li>
                  <% end %>

                  <% if @company.company_type.present? %>
                    <li class="mt-2 d-flex align-items-center">
                      <div class="me-3"><i class="fas fa-sitemap text-dark-emphasis"></i> </div>
                      <div>
                        <%= @company.company_type %>
                      </div>
                    </li>
                  <% end %>
                </ul>
              </div>
              <div class="col-md-6">
                <ul class="list-unstyled">
                  <% if @company.email.present? %>
                    <li class="d-flex align-items-center">
                      <div class="me-3"><i class="fas fa-envelope text-dark-emphasis"></i></div>
                      <div>
                        <%= @company.email %>
                      </div>
                    </li>
                  <% end %>
                  <% if @company.url.present? %>
                    <li class="mt-2 d-flex align-items-center">
                      <div class="me-3"><i class="fas fa-link text-dark-emphasis"></i></div>
                    <div>
                      <%= link_to @company.url, @company.url, target: "_blank" %>
                      </div>
                    </li>
                  <% end %>
                  <% if @company.tech_stack.present? %>
                    <li class="mt-2 d-flex align-items-center">
                      <div class="me-3"><i class="fas fa-code text-dark-emphasis"></i></div>
                      <div>
                        <%= @company.tech_stack %>
                      </div>
                    </li>
                  <% end %>
                  <li class="mt-2 d-flex align-items-center">
                    <div class="me-3"><i class="fas fa-user-circle text-dark-emphasis"></i></div>
                    <div>
                      <%#= @company.user.name %>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- New section for showcasing open-source software -->
        <div class="mt-4">
          <div class="card mb-4">
            <div class="card-body">
              <h2 class="card-title mb-4">Open Source Involvement</h2>
              
              <!-- Tabs -->
              <ul class="nav nav-tabs mb-4" id="openSourceTabs" role="tablist">
                <li class="nav-item" role="presentation">
                  <button class="nav-link active" id="contributes-tab" data-bs-toggle="tab" data-bs-target="#contributes" type="button" role="tab" aria-controls="contributes" aria-selected="true">Contributions & Sponsorships</button>
                </li>
                <li class="nav-item" role="presentation">
                  <button class="nav-link" id="help-wanted-tab" data-bs-toggle="tab" data-bs-target="#help-wanted" type="button" role="tab" aria-controls="help-wanted" aria-selected="false">Help Wanted</button>
                </li>
              </ul>
              
              <!-- Tab Content -->
              <div class="tab-content" id="openSourceTabContent">
                <!-- Contributions & Sponsorships Tab -->
                <div class="tab-pane fade show active" id="contributes" role="tabpanel" aria-labelledby="contributes-tab">
                  <% if current_user && current_user.admin? %>
                    <div data-controller="open-source-project">
                      <h4 class="mb-3">Add New Open Source Project</h4>
                      <%= form_with(model: [@company, OpenSourceProject.new], data: { 
                        action: "submit->open-source-project#submitForm",
                        'open-source-project-target': "form"
                      }) do |form| %>
                        <div class="mb-3">
                          <%= form.label :url, "GitHub URL", class: "form-label" %>
                          <%= form.url_field :url, class: "form-control", required: true %>
                        </div>
                        <div class="mb-3">
                          <%= form.label :project_type, "Project Type", class: "form-label" %>
                          <%= form.select :project_type, 
                                          options_for_select([['Contribution', 'contribution'], ['Sponsorship', 'sponsorship']]), 
                                          { prompt: "Select project type" }, 
                                          { class: "form-select", required: true } %>
                        </div>
                        <%= form.submit "Add Project", class: "btn btn-primary" %>
                      <% end %>

                      <div data-open-source-project-target="errors" class="alert alert-danger mt-3" style="display: none;"></div>

                      <div data-open-source-project-target="projectsList" class="row mt-4">
                        <% @company.open_source_projects.each do |project| %>
                          <!-- Render each project here (you can use the same HTML structure as in the addProjectToList method) -->
                        <% end %>
                      </div>
                    </div>
                  <% end %>

                  <div id="open-source-projects" class="row" data-open-source-project-target="projectsList">
                    <% @company.open_source_projects.each do |project| %>
                      <div class="col-md-6 mb-4">
                        <div class="card h-100">
                          <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                              <%= image_tag project.icon_url.presence || 'default_project_icon.png', alt: "#{project.name} Logo", class: "me-3 rounded", style: "width: 50px; height: 50px;" %>
                              <h5 class="card-title mb-0"><%= project.name %></h5>
                            </div>
                            <p class="card-text"><%= project.description %></p>
                            <div class="mt-3">
                              <% if project.project_type == 'contribution' %>
                                <span class="badge bg-success me-2">Active Contributor</span>
                              <% else %>
                                <span class="badge bg-warning text-dark me-2">Sponsor</span>
                              <% end %>
                              <span class="badge bg-info me-2"><%= project.stars %> Stars</span>
                              <span class="badge bg-secondary"><%= project.forks %> Forks</span>
                            </div>
                          </div>
                          <div class="card-footer bg-transparent d-flex justify-content-between align-items-center">
                            <%= link_to "View Project", project.url, class: "btn btn-outline-primary btn-sm", target: "_blank" %>
                            <% if current_user && (current_user.admin? || current_user == @company.user) %>
                              <%= button_to "Remove", company_open_source_project_path(@company, project), method: :delete, data: { 
                                controller: "open-source-project",
                                action: "open-source-project#removeProject",
                                open_source_project_project_id_param: project.id,
                                open_source_project_company_id_param: @company.id
                              }, class: "btn btn-outline-danger btn-sm" %>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
                
                <!-- Help Wanted Tab -->
                <div class="tab-pane fade" id="help-wanted" role="tabpanel" aria-labelledby="help-wanted-tab">
                  <h3 class="mb-4">Open Issues - We Need Your Help!</h3>
                  <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action">
                      <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Implement Dark Mode</h5>
                        <small class="text-muted">2 days ago</small>
                      </div>
                      <p class="mb-1">We're looking for help implementing a dark mode feature in our main application.</p>
                      <small class="text-muted">Main App • UI/UX • Good First Issue</small>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                      <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Optimize Database Queries</h5>
                        <small class="text-muted">1 week ago</small>
                      </div>
                      <p class="mb-1">We need assistance in optimizing some of our database queries for better performance.</p>
                      <small class="text-muted">Backend • Performance • Intermediate</small>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                      <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Improve Test Coverage</h5>
                        <small class="text-muted">3 days ago</small>
                      </div>
                      <p class="mb-1">Help us increase our test coverage by writing additional unit and integration tests.</p>
                      <small class="text-muted">Testing • All Levels</small>
                    </a>
                  </div>
                  
                  <div class="mt-4">
                    <h4>How to Contribute</h4>
                    <ol class="list-group list-group-numbered">
                      <li class="list-group-item">Fork the repository on GitHub</li>
                      <li class="list-group-item">Create a new branch for your contribution</li>
                      <li class="list-group-item">Make your changes and commit them</li>
                      <li class="list-group-item">Push to your fork and submit a pull request</li>
                      <li class="list-group-item">Wait for review and address any feedback</li>
                    </ol>
                  </div>
                  
                  <div class="mt-4 text-center">
                    <a href="#" class="btn btn-primary">View All Open Issues on GitHub</a>
                  </div>
                </div>
              </div>
              
              <!-- Call to Action -->
              <div class="mt-5 text-center">
                <h4>Want to Contribute?</h4>
                <p>We're always looking for passionate developers to join our open-source efforts!</p>
                <a href="#" class="btn btn-primary">Get Involved</a>
              </div>
            </div>
          </div>
        </div>

        <!--tech stack -->
        <div class="card mt-4">
          <div class="card-body">
            <h5 class="card-title mb-4 h2">Tech Stack</h5>
            <div class="row">
              <div class="col-6 col-md-3 mb-4">
                <div class="text-center">
                  <div class="card-body">
                    <%= image_tag "logos/rails.svg", alt: 'Ruby on Rails Icon', class: 'img-fluid mb-3 round', style: 'max-width: 45px; width: 100%;' %>
                    <h6 class="card-title">Ruby on Rails</h6>
                  </div>
                </div>
              </div>
              <div class="col-6 col-md-3 mb-4">
                <div class="text-center">
                  <div class="">
                    <%= image_tag "logos/ruby.svg", alt: 'Ruby Icon', class: 'img-fluid mb-3 round', style: 'max-width: 45px; width: 100%;' %>
                    <h6 class="card-title">Ruby</h6>
                  </div>
                </div>
              </div>
              <div class="col-6 col-md-3 mb-4">
                <div class="text-center">
                  <div class="">
                    <i class="fab fa-js-square fa-3x text-warning mb-3" style="font-size: min(3em, 10vw);"></i>
                    <h6 class="card-title">JavaScript</h6>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Admin links -->
    <% if user_signed_in? && current_user.admin? %>
      <nav class="navbar navbar-light bg-light mb-4">
        <div class="container-fluid">
          <ul class="navbar-nav d-flex flex-row">
            <li class="nav-item me-3">
              <%= link_to 'Edit', edit_company_path(@company), class: 'nav-link' %>
            </li>
            <li class="nav-item me-3">
              <%= link_to 'Delete', @company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'nav-link' %>
            </li>
            <li class="nav-item me-3">
              <%= link_to 'New Issue', new_company_issue_path(@company), class: 'nav-link' %>
            </li>
            <% Company.statuses.keys.each do |status| %>
              <% unless @company.status == status %>
                <li class="nav-item me-3">
                  <%= form_with url: update_status_company_path(@company, status: status), method: :patch, local: true do |form| %>
                    <%= form.submit "Set as #{status.titleize}", data: { confirm: "Are you sure you want to change the status to #{status.titleize}?" }, class: "nav-link btn btn-link p-0" %>
                  <% end %>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </nav>
    <% end %>
  </div>
</section>