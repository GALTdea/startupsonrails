<!DOCTYPE html>
<html>
  <head>
    <title>StartupsOnRails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: 'all', "data-turbo-track": "reload" %>
    <%#= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
    
   <script src="https://kit.fontawesome.com/c211385aec.js" crossorigin="anonymous"></script>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-E8S63YKX4C"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-E8S63YKX4C');
    </script>

  </head>

  <body class="">
    <% if user_signed_in? && current_user.admin? %>
      <%= render 'shared/admin_navbar' %>
    <% else %>
        <%= render 'shared/navbar' %>
    <% end %>
    
    <% if notice.present? %>
      <span class="notice"><%= notice %></span>
    <% end %>
    
    <% if alert.present? %>
      <span class="alert"><%= alert %></span>
    <% end %>

    <% if controller_name == 'home' && action_name == 'show' %>
      <div class="container-fluid">
        <%= render 'shared/welcome_header' %>
      </div>
    <% end %>

      <%= yield %>
  </body>
</html>
