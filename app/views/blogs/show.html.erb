<%# Ensure that the Bootstrap CSS is included in your application layout %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <% if @blog.image.attached? %>
        <div class="mb-4">
          <%= image_tag @blog.image, class: "img-fluid rounded" %>
          <%= image_tag url_for(@blog.image) if @blog.image.attached? %>

        </div>
      <% end %>

      <div class="card">
        <div class="card-body">
          <h1 class="card-title"><%= @blog.title %></h1>
          <p class="text-muted">Published: <%#= @blog.published_at.strftime("%B %d, %Y") %></p>
          <div class="rich-text-content">
            <%= @blog.content %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
