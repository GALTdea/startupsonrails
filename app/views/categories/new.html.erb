
<%= form_for(@category) do |f| %>
  <div class="form-label">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-label">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="submit">
    <%= f.submit  class:"btn btn-secondary" %>
  </div>
<% end %>

